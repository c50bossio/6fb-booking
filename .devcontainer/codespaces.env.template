# =============================================================================
# BookedBarber V2 - GitHub Codespaces Environment Variables Template
# =============================================================================
# 🔐 Secure environment configuration for cloud development
# 📋 Copy this to your Codespaces secrets for secure API key management
# =============================================================================

# =============================================================================
# Core Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./6fb_booking.db
STAGING_DATABASE_URL=sqlite:///./staging_6fb_booking.db

# =============================================================================
# Security & Authentication
# =============================================================================
# Generate secure keys: python -c 'import secrets; print(secrets.token_urlsafe(64))'
JWT_SECRET_KEY=your_secure_jwt_secret_key_here_generate_with_secrets_module
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,https://*.githubpreview.dev,https://*.github.dev,https://*.codespaces.githubusercontent.com

# =============================================================================
# Stripe Payment Integration
# =============================================================================
# Test keys for development - get from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Connect for barber payouts
STRIPE_CONNECT_CLIENT_ID=ca_your_stripe_connect_client_id_here

# =============================================================================
# Google Services Integration
# =============================================================================
# Google OAuth - get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Calendar API
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key_here

# Google My Business API
GOOGLE_MY_BUSINESS_CLIENT_ID=your_gmb_client_id_here
GOOGLE_MY_BUSINESS_CLIENT_SECRET=your_gmb_client_secret_here

# Google Analytics & Tracking
GOOGLE_ANALYTICS_ID=G-YOUR_GA4_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM-YOUR_CONTAINER_ID
GOOGLE_ADS_CONVERSION_ID=AW-YOUR_CONVERSION_ID

# =============================================================================
# Email & Communication Services
# =============================================================================
# SendGrid Email Service - get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@bookedbarber.com
SENDGRID_FROM_NAME=BookedBarber

# Twilio SMS Service - get from https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# Social Media & Marketing
# =============================================================================
# Meta Business (Facebook/Instagram) - get from https://developers.facebook.com/
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_PIXEL_ID=your_meta_pixel_id_here
META_ACCESS_TOKEN=your_meta_access_token_here

# =============================================================================
# Redis Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Staging environment Redis
STAGING_REDIS_URL=redis://localhost:6379/1
STAGING_REDIS_DB=1

# =============================================================================
# Monitoring & Error Tracking
# =============================================================================
# Sentry Error Tracking - get from https://sentry.io/settings/projects/
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# Feature Flags & Development Settings
# =============================================================================
# Frontend Feature Flags
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v2
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=true
NEXT_PUBLIC_SHOW_TEST_DATA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# External service keys (frontend-safe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
NEXT_PUBLIC_GA_TRACKING_ID=G-YOUR_GA4_MEASUREMENT_ID
NEXT_PUBLIC_GTM_ID=GTM-YOUR_CONTAINER_ID
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here

# Security Features
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_ENABLED=false

# =============================================================================
# Database Configuration (Advanced)
# =============================================================================
# PostgreSQL (for production-like testing)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bookedbarber_v2
POSTGRES_USER=bookedbarber
POSTGRES_PASSWORD=bookedbarber_secure_password_2025

# Connection pooling
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# API Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# Development Tools
# =============================================================================
# Hot reload and development options
UVICORN_RELOAD=true
UVICORN_LOG_LEVEL=info
NEXT_TELEMETRY_DISABLED=1

# Testing
TEST_DATABASE_URL=sqlite:///./test_6fb_booking.db
PYTEST_CURRENT_TEST=

# =============================================================================
# Security Notes for Codespaces
# =============================================================================
# 🔐 IMPORTANT: Never commit actual API keys to version control
# 📋 Use GitHub Codespaces Secrets for sensitive values:
#    1. Go to GitHub Settings > Codespaces
#    2. Add repository secrets or user secrets
#    3. Reference them in your devcontainer.json
# 
# 🔒 For production keys, use separate environment files
# 🌐 Codespaces automatically handles HTTPS and secure forwarding
# ⚠️ Test keys shown here are safe for development use only