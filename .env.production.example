# Production Environment Variables

# Database Configuration
DATABASE_URL=postgresql://sixfb:your-secure-password@postgres:5432/sixfb
POSTGRES_DB=sixfb
POSTGRES_USER=sixfb
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# Security Keys (generate strong random keys)
SECRET_KEY=your-production-secret-key-min-32-chars
JWT_SECRET_KEY=your-production-jwt-secret-key-min-32-chars

# API Configuration
FRONTEND_API_URL=https://api.6fbplatform.com
FRONTEND_URL=https://6fbplatform.com

# External Services
TRAFFT_API_KEY=your-trafft-api-key
TRAFFT_WEBHOOK_SECRET=your-trafft-webhook-secret
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password

# Email Configuration
EMAIL_FROM=noreply@6fbplatform.com
EMAIL_FROM_NAME=6FB Platform

# Application Settings
ENVIRONMENT=production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://6fbplatform.com,https://www.6fbplatform.com

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
MAX_LOGIN_ATTEMPTS=5

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Session Configuration
SESSION_LIFETIME_HOURS=24
SESSION_TIMEOUT_MINUTES=30

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=90

# Performance
WORKER_COUNT=4
WORKER_TIMEOUT=120