{
  "version": 2,
  "name": "bookbarber",
  "alias": ["bookbarber.com", "www.bookbarber.com"],
  "regions": ["iad1", "sfo1"],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "env": {
    "NEXT_PUBLIC_ENVIRONMENT": "production",
    "NEXT_PUBLIC_APP_URL": "https://bookbarber.com",
    "NEXT_PUBLIC_DOMAIN": "bookbarber.com",
    "NEXT_PUBLIC_APP_NAME": "BookBarber"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/www.bookbarber.com/(.*)",
      "destination": "https://bookbarber.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    }
  ],
  "functions": {
    "app/api/sitemap/route.ts": {
      "maxDuration": 30
    }
  }
}