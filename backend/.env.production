# 6FB Booking Platform - PRODUCTION Environment Configuration
# This file should be used as a reference for production deployment
# Copy values to your actual .env file on the production server

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Use PostgreSQL for production (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/6fb_booking_prod
# Alternative cloud databases:
# DATABASE_URL=postgresql://user:pass@db.render.com:5432/dbname
# DATABASE_URL=postgresql://user:pass@db.digitalocean.com:25060/dbname?sslmode=require

# =============================================================================
# JWT & AUTHENTICATION (REQUIRED)
# =============================================================================
# Generate secure keys with: python3 -c 'import secrets; print(secrets.token_urlsafe(64))'
# CRITICAL: Generate two different 64-character keys for production
SECRET_KEY=YOUR_64_CHAR_SECRET_KEY_HERE
JWT_SECRET_KEY=YOUR_64_CHAR_JWT_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# STRIPE CONFIGURATION (REQUIRED)
# =============================================================================
# Production Stripe keys (get from Stripe Dashboard: https://dashboard.stripe.com/)
# IMPORTANT: Use LIVE keys for production (sk_live_... and pk_live_...)
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE
STRIPE_CONNECT_CLIENT_ID=ca_YOUR_CONNECT_CLIENT_ID_HERE

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED)
# =============================================================================
# OPTION 1: SendGrid (Recommended for production)
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@bookbarber.com
EMAIL_FROM_NAME=BookBarber

# OPTION 2: Gmail (Alternative)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=youremail@gmail.com
# SMTP_PASSWORD=16-digit-app-password
# FROM_EMAIL=youremail@gmail.com
# EMAIL_FROM_NAME=BookBarber

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
API_V1_STR=/api/v1
FRONTEND_URL=https://bookbarber.com

# CORS Settings (adjust domains as needed)
BACKEND_CORS_ORIGINS=["https://bookbarber.com","https://api.bookbarber.com","https://www.bookbarber.com"]

# =============================================================================
# SECURITY & MONITORING
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate limiting
RATE_LIMIT_PER_MINUTE=200

# Session settings
SESSION_TIMEOUT_MINUTES=1440

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Square (if using)
SQUARE_APPLICATION_ID=your-square-app-id
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_ENVIRONMENT=production

# Google Calendar Integration
# Get from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CALENDAR_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_CALENDAR_REDIRECT_URI=https://api.bookbarber.com/api/v1/calendar/oauth/callback

# Tremendous (Alternative payouts)
TREMENDOUS_API_KEY=your-tremendous-key
TREMENDOUS_TEST_MODE=false
TREMENDOUS_WEBHOOK_SECRET=your-tremendous-webhook-secret

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# PAYOUT SCHEDULER SETTINGS
# =============================================================================
DEFAULT_PAYOUT_METHOD=stripe_standard
DEFAULT_MINIMUM_PAYOUT=50
DEFAULT_HOLD_DAYS=2
SCHEDULER_TIMEZONE=America/New_York
