# BookedBarber V2 Load Testing Configuration

# Deployment Environment
ENVIRONMENT=enterprise
BASE_URL=https://api.bookedbarber.com
FRONTEND_URL=https://bookedbarber.com
ADMIN_URL=https://app.bookedbarber.com

# Local Development (alternative)
# BASE_URL=http://localhost:8000
# FRONTEND_URL=http://localhost:3000
# ADMIN_URL=http://localhost:3000

# Authentication
TEST_USER_EMAIL=loadtest@bookedbarber.com
TEST_USER_PASSWORD=LoadTest2024!
ADMIN_EMAIL=admin@bookedbarber.com
ADMIN_PASSWORD=AdminTest2024!

# Test Configuration
MAX_CONCURRENT_USERS=10000
TEST_DURATION=30m
RAMP_UP_TIME=5m
THINK_TIME_MIN=1
THINK_TIME_MAX=5

# Six Figure Barber Test Data
TEST_SHOP_NAME=Load Test Barbershop
TEST_BARBER_NAME=Test Barber
TEST_CLIENT_PREFIX=LoadTestClient

# Database (for direct testing)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bookedbarber_v2
DB_USER=postgres
DB_PASSWORD=your_password

# Redis (for cache testing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Kubernetes (for infrastructure testing)
KUBE_CONFIG_PATH=~/.kube/config
KUBE_NAMESPACE=bookedbarber-v2

# Stripe Testing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Feature Flags
ENABLE_SIX_FIGURE_TESTING=true
ENABLE_ENTERPRISE_TESTING=true
ENABLE_PAYMENT_TESTING=false
ENABLE_SMS_TESTING=false
ENABLE_EMAIL_TESTING=false

# Performance Thresholds
MAX_RESPONSE_TIME_MS=2000
MAX_ERROR_RATE=1.0
MIN_SUCCESS_RATE=99.0
MAX_CPU_USAGE=80.0
MAX_MEMORY_USAGE=80.0

# Test Data Generation
GENERATE_TEST_USERS=1000
GENERATE_TEST_APPOINTMENTS=5000
GENERATE_TEST_PAYMENTS=500
CLEANUP_AFTER_TEST=true

# Reporting
RESULTS_DIR=./results
GENERATE_HTML_REPORT=true
GENERATE_PDF_REPORT=false
SEND_EMAIL_REPORT=false
EMAIL_RECIPIENTS=devops@bookedbarber.com

# Advanced Configuration
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTO_SCALING_TEST=true
ENABLE_FAILOVER_TEST=false
ENABLE_SECURITY_TEST=true