# =============================================================================
# BOOKEDBARBER FRONTEND - SECURE ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# SECURITY NOTICE: This template shows the format for environment variables
# without exposing actual secrets. Copy to .env.local and fill with real values.
# 
# NEVER commit .env.local files with real credentials to version control!
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL (no trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8000

# API Version
NEXT_PUBLIC_API_VERSION=v1

# =============================================================================
# STRIPE CONFIGURATION (Public Keys Only!)
# =============================================================================
# Get from Stripe Dashboard: https://dashboard.stripe.com/apikeys
# Development keys start with pk_test_, Production keys start with pk_live_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# =============================================================================
# GOOGLE ANALYTICS & TRACKING
# =============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXX

# Meta Pixel (Facebook/Instagram)
NEXT_PUBLIC_META_PIXEL_ID=YOUR_PIXEL_ID_HERE

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_RECURRING_APPOINTMENTS=true
NEXT_PUBLIC_ENABLE_SMS_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GOOGLE_CALENDAR=true
NEXT_PUBLIC_ENABLE_MFA=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Business Information (Public)
NEXT_PUBLIC_BUSINESS_NAME=BookedBarber
NEXT_PUBLIC_BUSINESS_PHONE=(555) 123-4567
NEXT_PUBLIC_BUSINESS_EMAIL=info@bookedbarber.com
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Main St, City, State 12345

# Booking Configuration
NEXT_PUBLIC_MIN_BOOKING_NOTICE_HOURS=2
NEXT_PUBLIC_MAX_ADVANCE_BOOKING_DAYS=30
NEXT_PUBLIC_BUSINESS_HOURS_START=09:00
NEXT_PUBLIC_BUSINESS_HOURS_END=18:00
NEXT_PUBLIC_TIME_SLOT_DURATION_MINUTES=30

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Only for development - MUST be false in production
NEXT_PUBLIC_ENABLE_DEBUG_TOOLS=false
NEXT_PUBLIC_SHOW_API_ERRORS=false

# =============================================================================
# SECURITY HEADERS (Server-side only)
# =============================================================================
# Content Security Policy
CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce

# HSTS Settings
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# =============================================================================
# COOKIE CONFIGURATION
# =============================================================================
# Cookie consent
NEXT_PUBLIC_COOKIE_CONSENT_ENABLED=true
COOKIE_DOMAIN=.yourdomain.com
COOKIE_SECURE=true  # Must be true in production
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# Session configuration
SESSION_SECRET=GENERATE_SECURE_RANDOM_KEY_MIN_32_CHARS
SESSION_MAX_AGE=86400  # 24 hours in seconds

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limits (requests per minute)
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_PAYMENT=10

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_PUBLIC_KEY@sentry.io/YOUR_PROJECT_ID
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build-time variables
ANALYZE_BUNDLE=false
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# IMPORTANT REMINDERS - FRONTEND SECURITY
# =============================================================================
# 1. Only use NEXT_PUBLIC_ prefix for values safe to expose to browsers
# 2. NEVER put secret keys, tokens, or passwords in NEXT_PUBLIC_ variables
# 3. Server-side secrets should not have the NEXT_PUBLIC_ prefix
# 4. Use different values for development, staging, and production
# 5. Implement proper CORS policies on your backend
# 6. Enable security headers in next.config.js
# 7. Regularly audit your bundle for exposed secrets
# 8. Use SubResource Integrity (SRI) for external scripts
# 9. Implement Content Security Policy (CSP)
# 10. Enable HTTPS in production with proper certificates

# =============================================================================
# SECURITY CHECKLIST FOR FRONTEND
# =============================================================================
# Before deploying to production:
# [ ] All NEXT_PUBLIC_ variables contain only public information
# [ ] No API keys or secrets in the client bundle
# [ ] Security headers configured in next.config.js
# [ ] HTTPS enabled with valid certificate
# [ ] CSP policy implemented and tested
# [ ] Cookie settings use Secure and HttpOnly flags
# [ ] Rate limiting implemented on API routes
# [ ] Error messages don't leak sensitive information
# [ ] Source maps disabled in production
# [ ] Dependencies are up to date and vulnerability-free