{
  "name": "BookedBarber - Professional Booking Platform",
  "short_name": "BookedBarber",
  "description": "Professional Barbershop Management Platform built on the Six Figure Barber methodology. Own The Chair. Own The Brand.",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "display": "standalone",
  "start_url": "/",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["business", "productivity", "lifestyle", "finance"],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 480
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+bookedbarber",
      "url": "/book?id=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "icons": [
    {
      "src": "/api/icon?size=48",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "/api/icon?size=72",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/api/icon?size=96",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/api/icon?size=144",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/api/icon?size=192",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/api/icon?size=512",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon.svg",
      "sizes": "any",
      "type": "image/svg+xml"
    }
  ],
  "shortcuts": [
    {
      "name": "Today's Schedule",
      "short_name": "Today",
      "description": "View today's appointments and check-ins",
      "url": "/my-schedule?date=today",
      "icons": [{ "src": "/api/icon?size=96", "sizes": "96x96" }]
    },
    {
      "name": "Quick Book",
      "short_name": "Book",
      "description": "Instant booking for walk-ins and calls",
      "url": "/book?quick=true&source=pwa",
      "icons": [{ "src": "/api/icon?size=96", "sizes": "96x96" }]
    },
    {
      "name": "Revenue Dashboard",
      "short_name": "Revenue",
      "description": "Six Figure Barber revenue tracking",
      "url": "/analytics?tab=revenue&period=today",
      "icons": [{ "src": "/api/icon?size=96", "sizes": "96x96" }]
    },
    {
      "name": "Client Lookup",
      "short_name": "Clients",
      "description": "Find client contact and history",
      "url": "/clients?search=true",
      "icons": [{ "src": "/api/icon?size=96", "sizes": "96x96" }]
    },
    {
      "name": "PWA Settings",
      "short_name": "PWA",
      "description": "Manage offline mode and notifications",
      "url": "/pwa",
      "icons": [{ "src": "/api/icon?size=96", "sizes": "96x96" }]
    }
  ]
}