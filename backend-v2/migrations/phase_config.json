{
  "phases": {
    "1": {
      "name": "Core Features",
      "description": "Essential booking and authentication features",
      "duration_weeks": 2,
      "features": {
        "enhanced_auth": {
          "description": "Multi-factor authentication with PIN and RBAC",
          "priority": "high",
          "models": ["User", "Role", "Permission"],
          "services": ["AuthService", "RoleService"],
          "endpoints": ["auth", "roles"],
          "dependencies": []
        },
        "advanced_booking": {
          "description": "Advanced booking with rules and constraints",
          "priority": "high", 
          "models": ["Booking", "BookingRule", "TimeSlot"],
          "services": ["BookingService", "SchedulingService"],
          "endpoints": ["bookings", "availability"],
          "dependencies": ["enhanced_auth"]
        },
        "client_management": {
          "description": "Comprehensive client profiles and preferences",
          "priority": "medium",
          "models": ["Client", "ClientPreference", "ClientHistory"],
          "services": ["ClientService", "PreferenceService"],
          "endpoints": ["clients", "preferences"],
          "dependencies": ["enhanced_auth"]
        }
      }
    },
    "2": {
      "name": "Calendar & Scheduling",
      "description": "Calendar integration and advanced scheduling",
      "duration_weeks": 2,
      "features": {
        "unified_calendar": {
          "description": "Drag-and-drop calendar with conflict detection",
          "priority": "high",
          "models": ["CalendarEvent", "ConflictRule"],
          "services": ["CalendarService", "ConflictService"],
          "endpoints": ["calendar", "events"],
          "dependencies": ["advanced_booking"]
        },
        "google_calendar": {
          "description": "Two-way Google Calendar synchronization",
          "priority": "medium",
          "models": ["GoogleSync", "CalendarMapping"],
          "services": ["GoogleCalendarService", "SyncService"],
          "endpoints": ["google-calendar", "sync"],
          "dependencies": ["unified_calendar"]
        },
        "availability_management": {
          "description": "Working hours, breaks, and holiday management",
          "priority": "medium",
          "models": ["Availability", "WorkingHours", "Holiday"],
          "services": ["AvailabilityService", "ScheduleService"],
          "endpoints": ["availability", "schedule"],
          "dependencies": ["unified_calendar"]
        }
      }
    }
  }
}