# =============================================================================
# BACKUP CONFIGURATION (Production)
# =============================================================================
# Backup settings for production
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

